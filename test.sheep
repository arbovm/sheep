#!/bin/bash
# vim: set ft=sh:

source ./sheep.sh

it "doesn't find elvis" <<-T
	cat /etc/passwd | grep elvis
T

it "finds /tmp" <<-T
	ls / | grep tmp
T

it "creates a file" <<-T
	touch testfile | ls testfile
T

AN_ENV_VAR=42
it "knows environment variables" <<-T
	echo $AN_ENV_VAR | grep '^42$'
T

xit "reads environment variables dynamically" <<-T
	echo \$AN_ENV_VAR | grep '^42$'
T
